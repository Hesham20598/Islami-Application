<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".ui.fragments.QuranFragment">

    <ImageView
        android:id="@+id/iv_quran_fragment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/quran_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/first_horozintal_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/gold_color"
        app:layout_constraintTop_toBottomOf="@id/iv_quran_fragment" />

    <TextView
        android:id="@+id/tv_suraName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/elmessiri"
        android:text="@string/suraName"
        android:textColor="@color/text_black_color"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_suraIndex"
        app:layout_constraintTop_toBottomOf="@id/first_horozintal_line" />

    <TextView
        android:id="@+id/tv_suraIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/elmessiri"
        android:text="@string/suraIndex"
        android:textColor="@color/text_black_color"
        android:textSize="25sp"
        app:layout_constraintRight_toLeftOf="@id/tv_suraName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_horozintal_line" />

    <View
        android:id="@+id/second_horozintal_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/gold_color"
        app:layout_constraintTop_toBottomOf="@id/tv_suraName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quranFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_sura_name"
        app:layout_constraintTop_toBottomOf="@id/second_horozintal_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/divider_line"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/gold_color"
        app:layout_constraintTop_toBottomOf="@id/first_horozintal_line"
        app:layout_constraintStart_toEndOf="@id/tv_suraIndex"
        app:layout_constraintEnd_toStartOf="@id/tv_suraName"
         />



</androidx.constraintlayout.widget.ConstraintLayout>